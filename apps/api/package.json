{
  "name": "ngurra-api",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/src/index.js",
  "scripts": {
    "dev": "ts-node-script --transpile-only src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:legacy": "npm run test:smoke && npm run test:happy",
    "test:ses-raw": "node tests/test-ses-raw.js",
    "test:ses-e2e": "node tests/test-e2e-ses-raw.js",
    "test:ai": "node tests/test-ai-integration.js",
    "test:mentor": "node tests/test-mentor-profile.js",
    "test:mentor-connect": "node tests/test-mentor-connect.js",
    "test:jest": "jest",
    "test:ai-rate": "node tests/test-ai-rate-limit.js",
    "test:ai-safety": "node tests/test-ai-safety.js",
    "test:smoke": "node tests/test-smoke.js",
    "test:happy": "node tests/test-auth-jobs.js",
    "seed": "node prisma/seed.js",
    "seed:web": "node prisma/import-web-data.js",
    "seed:verify": "node prisma/verify-seed.js",
    "build": "node build.mjs",
    "build:tsc": "tsc -p tsconfig.build.json",
    "start": "node dist/src/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit -p tsconfig.build.json",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "backfill:owners": "node scripts/backfill-business-owners.js --file=apps/api/data/business-owner-mapping.json --dry-run",
    "clean": "rimraf dist node_modules/.cache coverage",
    "audit": "npm audit --audit-level=high",
    "prepare": "prisma generate"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.300.0",
    "@aws-sdk/client-ses": "^3.400.0",
    "@aws-sdk/s3-request-presigner": "^3.300.0",
    "@elastic/elasticsearch": "^9.2.0",
    "@mux/mux-node": "^12.8.1",
    "@prisma/client": "^5.0.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.66.4",
    "cloudinary": "^2.6.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.0",
    "livekit-server-sdk": "^2.15.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.4",
    "openai": "^6.15.0",
    "pdfkit": "^0.17.2",
    "plaid": "^21.0.0",
    "prisma": "^5.0.0",
    "rate-limit-redis": "^4.3.1",
    "socket.io": "^4.8.3",
    "speakeasy": "^2.0.0",
    "stripe": "^14.25.0",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.3.7",
    "ua-parser-js": "^2.0.7",
    "ws": "^8.18.3",
    "xss": "^1.0.15",
    "zod": "^3.21.4"
  },
  "optionalDependencies": {
    "@sendgrid/mail": "^7.8.0"
  },
  "dependenciesMeta": {
    "nodemailer": {
      "optional": false
    }
  },
  "devDependencies": {
    "@gimbi/eslint-config": "file:../../packages/eslint-config",
    "@gimbi/tsconfig": "file:../../packages/tsconfig",
    "@types/bcryptjs": "^3.0.0",
    "@types/jest": "^29.5.14",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.19.27",
    "@types/supertest": "^6.0.2",
    "@types/ua-parser-js": "^0.7.39",
    "@vitest/coverage-v8": "^4.0.17",
    "esbuild": "0.27.2",
    "glob": "13.0.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17",
    "vitest-mock-extended": "^1.3.1"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
