# =============================================================================
# Gimbi Web Application Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3333"

# Socket.io Real-time Server (defaults to API URL if not set)
NEXT_PUBLIC_SOCKET_URL="http://localhost:3333"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="dev-nextauth-secret"

# Stripe (Payment Processing)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Cloudinary (Image Optimization)
# Set your Cloudinary cloud name to enable f_auto/q_auto image delivery
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
# Optional override (defaults to https://res.cloudinary.com/<cloud>/image/upload)
# NEXT_PUBLIC_CLOUDINARY_BASE_URL="https://res.cloudinary.com/your-cloud-name/image/upload"

# App URL (for SEO and OpenGraph)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Feature Flags (optional - defaults to false if not set)
# NEXT_PUBLIC_FEATURE_MENTORSHIP="true"
# NEXT_PUBLIC_FEATURE_COURSES="true"
# NEXT_PUBLIC_FEATURE_AI_COACHING="true"
# NEXT_PUBLIC_FEATURE_ANALYTICS="true"

# Error Tracking (optional)
# NEXT_PUBLIC_SENTRY_DSN="https://xxx@sentry.io/xxx"

# Analytics (optional)
# NEXT_PUBLIC_POSTHOG_KEY="phc_xxx"

# =============================================================================
# Production Overrides (set these in Netlify UI)
# =============================================================================
# Required:
# - NEXT_PUBLIC_API_URL="https://api.gimbi.com.au"
# - NEXT_PUBLIC_SOCKET_URL="https://api.gimbi.com.au"
# - NEXTAUTH_URL="https://ngurrapathways.life"
# - NEXTAUTH_SECRET="<generate with: openssl rand -base64 32>"
# - NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
# - NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_xxx"
#
# Optional:
# - NEXT_PUBLIC_APP_URL="https://ngurrapathways.com.au"
# - NEXT_PUBLIC_SENTRY_DSN="https://xxx@sentry.io/xxx"
# - NEXT_PUBLIC_POSTHOG_KEY="phc_xxx"
