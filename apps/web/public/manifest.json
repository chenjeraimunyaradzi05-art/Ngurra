{
  "name": "Ngurra Pathways",
  "short_name": "Ngurra",
  "description": "A culturally-grounded employment, education & mentorship platform for First Nations futures",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0f172a",
  "theme_color": "#1e3a8a",
  "orientation": "portrait-primary",
  "scope": "/",
  "icons": [
    {
      "src": "/brand/ngurra-logo.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/brand/ngurra-logo.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "categories": ["business", "education", "social"],
  "lang": "en-AU",
  "dir": "ltr",
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Browse Jobs",
      "short_name": "Jobs",
      "description": "Find new job opportunities",
      "url": "/jobs",
      "icons": [{ "src": "/brand/ngurra-logo.png", "sizes": "192x192" }]
    },
    {
      "name": "My Dashboard",
      "short_name": "Dashboard",
      "description": "View your dashboard",
      "url": "/member/dashboard",
      "icons": [{ "src": "/brand/ngurra-logo.png", "sizes": "192x192" }]
    },
    {
      "name": "Find Mentors",
      "short_name": "Mentors",
      "description": "Connect with mentors",
      "url": "/mentorship",
      "icons": [{ "src": "/brand/ngurra-logo.png", "sizes": "192x192" }]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["application/pdf", ".doc", ".docx"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+ngurra",
      "url": "/%s"
    }
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "edge_side_panel": {
    "preferred_width": 480
  }
}
