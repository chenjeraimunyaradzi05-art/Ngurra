{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noEmitOnError": false,
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "prisma",
    "src/**/*.test.ts",
    "src/tests/**/*",
    "src/__tests__/**/*",
    "src/test/**/*",
    "src/services/referralService.ts",
    "src/services/communityInitiativesService.ts",
    "src/services/dataSovereigntyService.ts",
    "src/services/indigenousLanguageService.ts",
    "src/services/gamificationService.ts",
    "src/services/culturalCalendarService.ts",
    "src/services/feedRanking.ts",
    "src/services/jobs.ts",
    "src/services/auth.test.ts",
    "src/services/messaging.test.ts",
    "src/services/notification.test.ts",
    "src/services/jobs.test.ts",
    "src/services/wellness.phase2.test.ts",
    "src/services/womenBusiness.phase2.test.ts",
    "src/services/womenHousing.phase2.test.ts",
    "src/services/womenSpaces.phase2.test.ts",
    "src/services/jobMatching.ts",
    "src/services/mentorshipMatching.ts",
    "src/routes/events.ts",
    "src/routes/sessions.ts",
    "src/routes/api-keys.ts",
    "src/routes/candidate-matching.ts",
    "src/routes/advisory.ts",
    "src/routes/connections.ts",
    "src/routes/data-sovereignty.ts",
    "src/routes/calendar.ts",
    "src/lib/sessionManager.ts",
    "src/lib/candidateMatching.ts"
  ]
}
