# Step 8: Enforce exact versions to prevent dependency drift
# This ensures reproducible builds and reduces supply chain attack surface
save-exact=true

# Use strict SSL verification
strict-ssl=true

# Audit on install (security step)
audit=true

# Fail on high severity vulnerabilities during install
audit-level=high

# Prefer offline packages when available
prefer-offline=true

# Package lock should always be respected
package-lock=true
